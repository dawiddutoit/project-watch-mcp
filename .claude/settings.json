{
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run project-watch-mcp --initialize",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "python ./.claude/hooks/session-start.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/enforce_agent_usage.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}