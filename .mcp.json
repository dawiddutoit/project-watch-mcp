{
  "mcpServers": {
    "project-watch-mcp": {
      "command": "uvx",
      "args": [
        "project-watch-mcp",
        "--transport",
        "stdio",
        "--repository",
        "."
      ],
      "env": {
        "NEO4J_URI": "${NEO4J_URI}",
        "PROJECT_WATCH_USER": "${PROJECT_WATCH_USERNAME}",
        "PROJECT_WATCH_PASSWORD": "${PROJECT_WATCH_PASSWORD}",
        "PROJECT_WATCH_DATABASE": "${PROJECT_WATCH_DATABASE}",
        "EMBEDDING_PROVIDER": "voyage",
        "FILE_PATTERNS": "${FILE_PATTERNS:-*.py,*.js,*.ts,*.md,*.json,*.yaml,*.yml, *.toml}"
      }
    }
  }
}